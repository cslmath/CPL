);

Context()->variables->are(
	k => Real
);

$a = random(1, 9);
$b = random(1, 9);
$c1 = random(2,9,1);
do {
	$c = random(1, 9)
} until (gcd($b, $c) == 1);
$p = random(2, 5);
$ak = Formula("$a*k / ($b*k + $c)^{$p}")->reduce;

# Print problem number and point value (weight) for the problem
TEXT(beginproblem());

# Show which answers are correct and which ones are incorrect
$showPartialCorrectAnswers = 1;

